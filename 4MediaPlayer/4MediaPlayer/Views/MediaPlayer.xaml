<UserControl x:Class="_4MediaPlayer.MediaPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_4MediaPlayer"
             mc:Ignorable="d">

    <Grid Background="{StaticResource DarkBackgroundBrush}" MouseLeftButtonDown="MediaPlayer_MouseLeftButtonDown">
        <MediaElement
            Name="mediaPlayer"
            UnloadedBehavior="Manual" 
            LoadedBehavior="Manual"
            Source="{Binding Path}"
            Volume="{Binding ElementName=mediaVolume, Path=Value}"/>
        <Grid
            Height="25"
            VerticalAlignment="Bottom">
            <Grid
                Name="DefaultControls" Background="#19000000"
                >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Content="Back"
                    Width="30"/>
                <Button
                    Grid.Column="1"
                    Name="PlayDefault"
                    Content="Play"
                    Command="{Binding Play}"
                    Width="30" Click="PlayDefault_Click"/>
                <Button
                    Grid.Column="2"
                    Content="Next"
                    Width="30"/>
                <TextBlock
                    Grid.Column="3"
                    Text="160:50" 
                    Foreground="White" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"/>
                <Slider
                    Grid.Column="4"
                    VerticalAlignment="Center"/>
                <TextBlock
                    Grid.Column="5"
                    Text="160:50" 
                    Foreground="White" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"/>
                <Button
                    Grid.Column="6"
                    Content="Vol"
                    Width="30"/>
                <Slider
                    Grid.Column="7"
                    Name="mediaVolume"
                    Maximum="1"
                    Minimum="0"
                    TickFrequency="0.1"
                    VerticalAlignment="Center"/>
                <Button
                    Grid.Column="8"
                    Name="FullScreen"
                    Content="FScr"
                    Width="30" Click="FullScreen_Click"/>
            </Grid>
            <Grid
                Name="ImageControls">

            </Grid>


        </Grid>
    </Grid>
</UserControl>
