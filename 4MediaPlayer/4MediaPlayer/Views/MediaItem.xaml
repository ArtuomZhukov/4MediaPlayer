<UserControl x:Class="_4MediaPlayer.MediaItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_4MediaPlayer"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="160">
    <Grid Background="White">
        <Button Name="ChooseVideoButton" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Grid Height="90" Width="160" Margin="-2,-2,-2,-2">
                <Image Name="VideoPreview" Margin="0,0,0,0"></Image>
                <Label Name="FileName" Content="file.test" VerticalAlignment="Bottom" Height="20" Padding="3,0,0,0" Background="#66000000" Foreground="White" />
            </Grid>
        </Button>
        <Border Name="CurrentVideoBorder" Visibility="Hidden" BorderBrush="#FF008BFF" BorderThickness="2"></Border>
    </Grid>
</UserControl>
