<Window 
    x:Class="_4MediaPlayer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:_4MediaPlayer"
    xmlns:model="clr-namespace:_4MediaPlayer.Model"
    xmlns:viewmodel="clr-namespace:_4MediaPlayer.ViewModel"
    mc:Ignorable="d"
    Title="4MediaPlayer" 
    Name="Main"
    Height="450" 
    Width="800">

    <Window.DataContext>
        <viewmodel:MainViewModel />
    </Window.DataContext>

    <Window.Style>
        <Style TargetType="Window">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=mediaPlayer, Path=IsFullScreen}" Value="True">
                    <Setter Property="WindowStyle" Value="None"/>
                    <Setter Property="WindowState" Value="Maximized"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="160"/>
        </Grid.ColumnDefinitions>

        <Grid 
            Grid.Column="0"
            DataContext="{Binding SelectedMedia}">

            <local:MediaPlayer
                x:Name="mediaPlayer"/>

            <Button 
                Content=">"
                Width="20" 
                HorizontalAlignment="Right" 
                Margin="0,0,0,25" Background="#50000000"/>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>

            <DockPanel>
                <TextBox
                    Text="Search" />
            </DockPanel>

            <ListBox
            Grid.Row="1"
            SelectionMode="Extended"
            HorizontalContentAlignment="Stretch"
            Background="{StaticResource DarkBackgroundBrush}"
            BorderThickness="0"
            ItemsSource="{Binding MediaView}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding SelectedMedia}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template" Value="{StaticResource MediaListItems}" />
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button 
                    Command="{Binding AddItem}"
                    Content="Add" 
                    Grid.Column="0"/>
                <Button 
                    Command="{Binding LoadItem}"
                    Content="Load" 
                    Grid.Column="1"/>
                <Button 
                    Content="PrShow" 
                    Grid.Column="2"/>
                <Button 
                    Command="{Binding Clear}"
                    Content="Clear" 
                    Grid.Column="3"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
